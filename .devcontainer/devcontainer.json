{
  "name": "Triggr Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "postCreateCommand": "npm install && npm install -D tailwindcss postcss autoprefixer && node_modules/.bin/tailwindcss init -p",
  "forwardPorts": [3000],
  "remoteUser": "node"
}